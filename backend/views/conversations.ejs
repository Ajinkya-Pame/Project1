<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Your Chats</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow fixed top-0 w-full z-10">
        <%- include('partials/nav_users') %>
    </header>

    <!-- Main -->
    <main class="flex flex-grow mt-16 h-[calc(100vh-4rem)]">

        <!-- Left Sidebar: Conversation List -->
        <aside class="w-1/3 border-r bg-white overflow-y-auto">
            <h2 class="text-xl font-semibold px-4 py-3 border-b">Conversations</h2>
            <% if (convos.length===0) { %>
                <p class="text-gray-600 p-4">No chats yet.</p>
                <% } else { %>
                    <ul>
                        <% convos.forEach(c=> { %>
                            <li class="border-b last:border-none">
                                <a href="/messages/chat/<%= c.postId %>/<%= c.otherId %>"
                                    class="block px-4 py-3 hover:bg-gray-50 flex justify-between items-center">
                                    <div>
                                        <p class="font-medium">
                                            <%= nameMap[c.otherId] %>
                                        </p>
                                        <p class="text-sm text-gray-600 truncate">
                                            <%= c.lastMessage %>
                                        </p>
                                    </div>
                                    <span class="text-xs text-gray-500 whitespace-nowrap">
                                        <%= new Date(c.at).toLocaleTimeString([], { hour: '2-digit' , minute: '2-digit'
                                            }) %>
                                    </span>
                                </a>
                            </li>
                            <% }); %>
                    </ul>
                    <% } %>
        </aside>

        <!-- Right Content: Chat Messages -->
        <section class="flex-1 bg-white flex flex-col h-full">
            <% if (!messages || messages.length===0) { %>
                <div class="flex-1 flex items-center justify-center text-gray-500">
                    Select a conversation to start chatting.
                </div>
                <% } else { %>
                    <div class="flex-1 overflow-y-auto p-4 space-y-4">
                        <% messages.forEach(m=> { %>
                            <div
                                class="<%= m.senderId.toString() === currentUserId.toString() ? 'text-right' : 'text-left' %>">
                                <div class="inline-block px-4 py-2 rounded-lg 
                <%= m.senderId.toString() === currentUserId.toString() 
                  ? 'bg-blue-500 text-white' 
                  : 'bg-gray-200 text-gray-800' %>">
                                    <%= m.message %>
                                </div>
                                <div class="text-xs text-gray-400 mt-1">
                                    <%= new Date(m.createdAt).toLocaleTimeString([], { hour: '2-digit' ,
                                        minute: '2-digit' }) %>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <% } %>
                        <% if (showInputBox !==false) { %>
                            <!-- Send message form -->
                            <form action="/messages/send" method="POST" class="p-4 border-t flex items-center gap-2">
                                <input type="hidden" name="receiverId" value="<%= otherId %>">
                                <input type="hidden" name="postId" value="<%= postId %>">
                                <input type="text" name="message" required placeholder="Type your message..."
                                    class="flex-1 px-4 py-2 border rounded-full focus:outline-none focus:ring">
                                <button type="submit"
                                    class="bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600">
                                    Send
                                </button>
                            </form>
                            <% } %>
        </section>

    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>
</body>

</html>