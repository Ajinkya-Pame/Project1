<% messages.forEach(m=> { %>
    <div class="<%= m.senderId.toString() === currentUserId.toString() ? 'text-right' : 'text-left' %>">
        <div class="inline-block px-4 py-2 rounded-lg max-w-[80%]
                <%= m.senderId.toString() === currentUserId.toString() ? 'bg-green-100' : 'bg-gray-200' %>">
            <p class="text-gray-800">
                <%= m.message %>
            </p>
            <small class="text-xs text-gray-500 block mt-1">
                <%= new Date(m.createdAt).toLocaleString() %>
            </small>
        </div>
    </div>
    <% }) %>